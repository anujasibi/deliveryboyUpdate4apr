<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">#fff</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">#fff</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">#fff</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">#5C25B7</item>
    </style>

    <style name="ThemeOverlay.MySwitch" parent="">
        <item name="colorControlActivated">#00ff00</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#fff</item>
    </style>


</resources>
